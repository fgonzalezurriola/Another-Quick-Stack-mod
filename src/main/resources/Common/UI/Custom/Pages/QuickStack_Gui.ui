@PrimaryButtonStyle = TextButtonStyle(
  Default: (Background: #3a7bd5, LabelStyle: (FontSize: 20, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8be5, LabelStyle: (FontSize: 20, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6bc5, LabelStyle: (FontSize: 20, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@SmallButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b4552, LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2532, LabelStyle: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@ToggleOnStyle = TextButtonStyle(
  Default: (Background: #3a7bd5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8be5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6bc5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 380, Height: 320);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 24);

  Label {
    Text: "Quick Stack";
    Anchor: (Height: 40);
    Style: (
      FontSize: 26,
      TextColor: #ffffff,
      HorizontalAlignment: Center,
      RenderBold: true
    );
  }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542;
  }

  Group { Anchor: (Height: 20); }

  Group {
    LayoutMode: Center;
    Anchor: (Height: 60);

    TextButton #BtnQuickStack {
      Text: "QUICK STACK";
      Anchor: (Width: 200, Height: 52);
      Style: @PrimaryButtonStyle;
    }
  }

  Group { Anchor: (Height: 20); }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542;
  }

  Group { Anchor: (Height: 16); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 40);

    Label {
      Text: "Search Radius";
      Anchor: (Width: 140);
      Style: (FontSize: 14, TextColor: #96a9be, VerticalAlignment: Center);
    }

    Group { FlexWeight: 1; }

    TextButton #BtnRadiusMinus {
      Text: "-";
      Anchor: (Width: 36, Height: 32);
      Style: @SmallButtonStyle;
    }

    Group { Anchor: (Width: 8); }

    Label #LblRadius {
      Text: "10";
      Anchor: (Width: 40, Height: 32);
      Style: (FontSize: 16, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center, RenderBold: true);
    }

    Group { Anchor: (Width: 8); }

    TextButton #BtnRadiusPlus {
      Text: "+";
      Anchor: (Width: 36, Height: 32);
      Style: @SmallButtonStyle;
    }
  }

  Group { Anchor: (Height: 10); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 40);

    Label {
      Text: "Check Backpack";
      Anchor: (Width: 140);
      Style: (FontSize: 14, TextColor: #96a9be, VerticalAlignment: Center);
    }

    Group { FlexWeight: 1; }

    TextButton #BtnToggleBackpack {
      Text: "ON";
      Anchor: (Width: 70, Height: 32);
      Style: @ToggleOnStyle;
    }
  }

  Group { FlexWeight: 1; }

  Label {
    Text: "Press ESC to close";
    Anchor: (Height: 16);
    Style: (FontSize: 11, TextColor: #4a5568, HorizontalAlignment: Center);
  }
}
